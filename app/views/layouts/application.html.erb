<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand"><strong>Bookers</strong></a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">

    <% if user_signed_in? %>

     <li>
        <%= link_to user_path(current_user.id), :style=>"color:#FFFFFF;" do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"> Home
        <% end %>
     </li>

     <li>
        <%= link_to users_path, :style=>"color:#FFFFFF;" do %>
          <span class="glyphicon glyphicon-user" aria-hidden="true"> Users
        <% end %>
     </li>

     <li>
        <%= link_to books_path, :style=>"color:#FFFFFF;" do %>
          <span class="glyphicon glyphicon-book" aria-hidden="true"> Books
        <% end %>
     </li>

     <li>
        <%= link_to destroy_user_session_path, method: :delete, :style=>"color:#FAFAFA;" do %>
          <span class="glyphicon glyphicon-share" aria-hidden="true"> logout
        <% end %>
     </li>

    <% else %>

     <li>
        <%= link_to root_path, :style=>"color:#FFFFFF;" do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"> Home
        <% end %>
     </li>

     <li>
        <%= link_to home_about_path, :style=>"color:#FFFFFF;" do %>
          <span class="glyphicon glyphicon-link" aria-hidden="true"> About
        <% end %>
     </li>

     <li>
        <%= link_to new_user_registration_path, :style=>"color:#FFFFFF;" do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"> Sign up
        <% end %>
     </li>

     <li>
        <%= link_to new_user_session_path, :style=>"color:#FFFFFF;" do %>
          <span class="glyphicon glyphicon-check" aria-hidden="true"> login
        <% end %>
      </li>

      </ul>
<% end %>
    </div>
  </div>
</nav>

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

<%= yield %>

  </body>
</html>
