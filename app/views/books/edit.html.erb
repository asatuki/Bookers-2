<div class="hennsyu">
	<h2>Editing Book</h2>

<%= form_for(@book) do |bookedit| %>
<div class="col-sm-4">
<p>Title</p><%= bookedit.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Title"%>
