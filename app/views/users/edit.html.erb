<div class="hennsyu">
	<h1>User info</h1>

<%= form_for(@user) do |useredit| %>
<p><h4>Name</h4><div class="col-sm-4"></p><%= useredit.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
<br>

<p><h4>Image</h4></p>
<label class="control-label sr-only" for="user_profile_image">ProfileImage</label>
    <%= useredit.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

<br>
<p class="introduction"><h4>Introduction</h4><div class="col-sm-13"><%= useredit.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail",placeholder:"" %>
</p><br>

<%= useredit.submit "Update User", class:"btn btn-default btn-block" %>



<% end %>
</div>